<UserControl x:Class="CardGames.CardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames"
             mc:Ignorable="d" Width="200" Height="300">
    <Grid Width="200" Height="300">
        <Button Click="PicBack_Click" MouseDown="PicBack_MouseDown" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="200">
            <Image x:Name="PicBack" Source="/cardback1.jpg" Width="200" Height="300" />
        </Button>
        <Button Click="PicBack_Click" MouseDown="PicBack_MouseDown" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="200">
            <Image x:Name="PicCard" Source="/cardback1.jpg" />
        </Button>
    </Grid>
</UserControl>
