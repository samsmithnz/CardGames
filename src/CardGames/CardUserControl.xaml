<UserControl x:Class="CardGames.CardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames"
             mc:Ignorable="d" MinWidth="40" MinHeight="60"
             AllowDrop="True"
             DragEnter="CardUserControl_DragEnter"
             DragOver="CardUserControl_DragOver"
             DragLeave="CardUserControl_DragLeave"
             Drop="CardUserControl_Drop">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Click="PicBack_Click" MouseDown="PicBack_MouseDown" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="PicBack" Source="Images/cardback1.jpg" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Button>
        <Button Click="PicBack_Click" MouseDown="PicBack_MouseDown" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="PicCard" Source="Images/cardback1.jpg" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Button>
    </Grid>
</UserControl>
