<Window x:Class="CardGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGames"
        mc:Ignorable="d"
        Title="Card Games - WPF" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Card Display Area -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <local:CardUserControl x:Name="Card1" Margin="10" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card2" Margin="10" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card3" Margin="10" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card4" Margin="10" Width="200" Height="300"/>
        </StackPanel>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="FlipButton" Content="Flip All Cards" Click="FlipButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="ShuffleButton" Content="Shuffle &amp; Reload" Click="ShuffleButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Label x:Name="StatusLabel" Content="Total cards: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
