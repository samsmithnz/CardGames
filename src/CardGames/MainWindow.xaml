<Window x:Class="CardGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGames"
        xmlns:core="clr-namespace:CardGames.Core;assembly=CardGames.Core"
        mc:Ignorable="d"
        Title="Solitaire - Card Games" Height="700" Width="1200"
        MinWidth="1000" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Solitaire Table Area -->
        <Canvas Grid.Row="0" Background="DarkGreen" Margin="10">
            <!-- Stock Pile (top-left corner) -->
            <Border Canvas.Left="20" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <local:CardUserControl x:Name="StockPile" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Label Canvas.Left="20" Canvas.Top="155" Content="Stock" Foreground="White" 
                   FontSize="10" HorizontalAlignment="Center" Width="90"/>
            
            <!-- Recycle Button (appears when all cards are in the waste pile) -->
            <Button x:Name="RecycleButton" Canvas.Left="75" Canvas.Top="75" Width="80" Height="25"
                    Content="🔄 Recycle" FontSize="9" Padding="2" 
                    Background="DarkOrange" Foreground="White" BorderBrush="Orange"
                    Visibility="Collapsed" Click="RecycleButton_Click"
                    ToolTip="Click to move all waste cards back to stock pile"/>
            
            <!-- Waste Pile (next to stock) -->
            <Border Canvas.Left="130" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <local:CardUserControl x:Name="WastePile" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Label Canvas.Left="130" Canvas.Top="155" Content="Waste" Foreground="White" 
                   FontSize="10" HorizontalAlignment="Center" Width="90"/>
            
            <!-- Foundation Piles (top-right area, 4 horizontal) -->
            <!-- Order must match Card.CardSuite enum: Heart(0), Club(1), Diamond(2), Spade(3) -->
            <Border Canvas.Left="750" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <local:CardUserControl x:Name="Foundation1"/>
                    <Label Content="♥" Foreground="Red" FontSize="14" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Canvas.Left="860" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <local:CardUserControl x:Name="Foundation2"/>
                    <Label Content="♣" Foreground="Black" FontSize="14" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Canvas.Left="970" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <local:CardUserControl x:Name="Foundation3"/>
                    <Label Content="♦" Foreground="Red" FontSize="14" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Canvas.Left="1080" Canvas.Top="20" Width="90" Height="130" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <local:CardUserControl x:Name="Foundation4"/>
                    <Label Content="♠" Foreground="Black" FontSize="14" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Tableau Piles (7 columns, centered below) -->
            <!-- Column 1 -->
            <Border Canvas.Left="50" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn1">
                    <local:CardUserControl x:Name="Tableau1_1"/>
                </Canvas>
            </Border>
            
            <!-- Column 2 -->
            <Border Canvas.Left="160" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn2">
                    <local:CardUserControl x:Name="Tableau2_1"/>
                    <local:CardUserControl x:Name="Tableau2_2"/>
                </Canvas>
            </Border>
            
            <!-- Column 3 -->
            <Border Canvas.Left="270" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn3">
                    <local:CardUserControl x:Name="Tableau3_1"/>
                    <local:CardUserControl x:Name="Tableau3_2"/>
                    <local:CardUserControl x:Name="Tableau3_3"/>
                </Canvas>
            </Border>
            
            <!-- Column 4 -->
            <Border Canvas.Left="380" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn4">
                    <local:CardUserControl x:Name="Tableau4_1"/>
                    <local:CardUserControl x:Name="Tableau4_2"/>
                    <local:CardUserControl x:Name="Tableau4_3"/>
                    <local:CardUserControl x:Name="Tableau4_4"/>
                </Canvas>
            </Border>
            
            <!-- Column 5 -->
            <Border Canvas.Left="490" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn5">
                    <local:CardUserControl x:Name="Tableau5_1"/>
                    <local:CardUserControl x:Name="Tableau5_2"/>
                    <local:CardUserControl x:Name="Tableau5_3"/>
                    <local:CardUserControl x:Name="Tableau5_4"/>
                    <local:CardUserControl x:Name="Tableau5_5"/>
                </Canvas>
            </Border>
            
            <!-- Column 6 -->
            <Border Canvas.Left="600" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn6">
                    <local:CardUserControl x:Name="Tableau6_1"/>
                    <local:CardUserControl x:Name="Tableau6_2"/>
                    <local:CardUserControl x:Name="Tableau6_3"/>
                    <local:CardUserControl x:Name="Tableau6_4"/>
                    <local:CardUserControl x:Name="Tableau6_5"/>
                    <local:CardUserControl x:Name="Tableau6_6"/>
                </Canvas>
            </Border>
            
            <!-- Column 7 -->
            <Border Canvas.Left="710" Canvas.Top="200" Width="90" Height="400" 
                    BorderBrush="White" BorderThickness="1" Background="Transparent" CornerRadius="5">
                <Canvas x:Name="TableauColumn7">
                    <local:CardUserControl x:Name="Tableau7_1"/>
                    <local:CardUserControl x:Name="Tableau7_2"/>
                    <local:CardUserControl x:Name="Tableau7_3"/>
                    <local:CardUserControl x:Name="Tableau7_4"/>
                    <local:CardUserControl x:Name="Tableau7_5"/>
                    <local:CardUserControl x:Name="Tableau7_6"/>
                    <local:CardUserControl x:Name="Tableau7_7"/>
                </Canvas>
            </Border>
        </Canvas>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="NewGameButton" Content="New Game" Click="NewGameButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="SaveGameButton" Content="Save Game" Click="SaveGameButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="LoadGameButton" Content="Load Game" Click="LoadGameButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Label x:Name="StatusLabel" Content="Click 'New Game' to start playing Solitaire"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
