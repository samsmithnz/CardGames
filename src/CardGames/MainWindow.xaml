<Window x:Class="CardGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGames"
        mc:Ignorable="d"
        Title="Card Games - WPF" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Card Display Area -->
        <Canvas Grid.Row="0" Background="DarkGreen" Margin="20">
            <!-- Foundation areas (top row) -->
            <Border Canvas.Left="50" Canvas.Top="20" Width="220" Height="320" BorderBrush="White" BorderThickness="2" Background="Transparent">
                <Label Content="Foundation 1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>
            <Border Canvas.Left="300" Canvas.Top="20" Width="220" Height="320" BorderBrush="White" BorderThickness="2" Background="Transparent">
                <Label Content="Foundation 2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>
            <Border Canvas.Left="550" Canvas.Top="20" Width="220" Height="320" BorderBrush="White" BorderThickness="2" Background="Transparent">
                <Label Content="Foundation 3" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>
            <Border Canvas.Left="800" Canvas.Top="20" Width="220" Height="320" BorderBrush="White" BorderThickness="2" Background="Transparent">
                <Label Content="Foundation 4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>
            
            <!-- Tableau areas (bottom row) -->
            <local:CardUserControl x:Name="Card1" Canvas.Left="50" Canvas.Top="370" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card2" Canvas.Left="300" Canvas.Top="370" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card3" Canvas.Left="550" Canvas.Top="370" Width="200" Height="300"/>
            <local:CardUserControl x:Name="Card4" Canvas.Left="800" Canvas.Top="370" Width="200" Height="300"/>
        </Canvas>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="FlipButton" Content="Flip All Cards" Click="FlipButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="ShuffleButton" Content="Shuffle &amp; Reload" Click="ShuffleButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="ResetButton" Content="Reset Game" Click="ResetButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Label x:Name="StatusLabel" Content="Total cards: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
