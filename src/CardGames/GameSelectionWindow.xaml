<Window x:Class="CardGames.GameSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Game Type" Height="336" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Manual">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Choose a Solitaire Game" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Game Options -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <RadioButton x:Name="KlondikeRadio" Content="Klondike Solitaire (Classic)" 
                         IsChecked="True" Margin="0,5" FontSize="14"/>
            <TextBlock Text="Traditional 7-column solitaire with stock and waste piles" 
                       Margin="20,0,0,10" FontSize="11" Foreground="Gray"/>
            
            <RadioButton x:Name="FreecellRadio" Content="Freecell" 
                         Margin="0,5" FontSize="14"/>
            <TextBlock Text="8-column solitaire with 4 free cells for temporary storage" 
                       Margin="20,0,0,10" FontSize="11" Foreground="Gray"/>
        </StackPanel>

        <!-- Note about UI limitations -->
        <Border Grid.Row="2" Background="LightYellow" BorderBrush="Orange" 
                BorderThickness="1" Padding="10" Margin="0,0,0,20">
            <TextBlock TextWrapping="Wrap" FontSize="11">
                <Run FontWeight="Bold">Note:</Run> The current UI is optimized for Klondike Solitaire. 
                Freecell will work with the core game logic but may not display all cards properly 
                due to the need for 8 columns and 4 free cells.
            </TextBlock>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="Start Game" 
                    Width="80" Margin="0,0,10,0" Padding="5"
                    Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="80" Padding="5"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>